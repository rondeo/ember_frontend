<h1>Mitarbeiter</h1>

<LinkTo
  @params={{array "users.add"}}
  class="btn btn-primary"
  data-test-link="users.add"
>
  Mitarbeiter hinzuf√ºgen
</LinkTo>

<table
  class="table"
  data-test-table="users"
>
  <thead>
    <tr>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>E-Mail</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |user|}}
      <tr data-test-user={{user.id}}>
        <td data-test-column="first-name">
          {{user.firstName}}
        </td>
        <td data-test-column="last-name">
          {{user.lastName}}
        </td>
        <td data-test-column="email">
          {{user.email}}
        </td>
        <td>
          <LinkTo
            @params={{array "user.edit" user.id}}
            class="btn btn-primary"
            data-test-button="edit"
          >
            bearbeiten
          </LinkTo>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}